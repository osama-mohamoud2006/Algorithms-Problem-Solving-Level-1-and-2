{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run C++ File",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compile C++ file"
    },
    {
      "label": "Execute C++",
      "type": "shell",
      "command": "${fileDirname}/${fileBasenameNoExtension}.exe",
      "dependsOn": "Run C++ File",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
